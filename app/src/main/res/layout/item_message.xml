<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Received message -->
        <LinearLayout
            android:id="@+id/layoutReceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:visibility="gone">

            <!-- Sender name for received message -->
            <TextView
                android:id="@+id/textSenderNameReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:textSize="12sp"
                android:paddingBottom="2dp"
                android:text="Sender Name" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">

                <ImageView
                    android:id="@+id/imageProfile"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="6dp"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_myplaces"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textReceived"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_received_message"
                        android:padding="10dp"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:maxWidth="240dp" />

                    <!-- Timestamp for received message -->
                    <TextView
                        android:id="@+id/tvTimeReceived"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="#999999"
                        android:paddingTop="2dp"
                        android:gravity="start"
                        android:text="12:34" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Sent message -->
        <LinearLayout
            android:id="@+id/layoutSent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:visibility="gone">

            <!-- Sender name for sent message -->
            <TextView
                android:id="@+id/textSenderNameSent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:textSize="12sp"
                android:paddingBottom="2dp"
                android:text="You" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textSent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_sent_message"
                    android:padding="10dp"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:maxWidth="240dp" />

                <!-- Timestamp for sent message -->
                <TextView
                    android:id="@+id/tvTimeSent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#999999"
                    android:paddingTop="2dp"
                    android:gravity="end"
                    android:text="12:34" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
